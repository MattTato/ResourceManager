<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tatoczenkom.resourcemanager.BatteryFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Below are some simple properties regarding the battery of the phone. For the checkboxes, if they are checked, then that property is true."
                android:id="@+id/explanationOfPage"
                android:textColor="#ff000000"
                android:layout_gravity="top"
                android:layout_marginLeft="4dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charging"
                android:id="@+id/chargingCheckBox"
                android:layout_gravity="center_horizontal" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC Charging"
                android:id="@+id/acChargeCheckBox"
                android:layout_gravity="center_horizontal" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USB Charging"
                android:id="@+id/usbChargeCheckBox"
                android:layout_gravity="center_horizontal" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Battery Health"
                android:id="@+id/batHealthGoodCheckBox"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/chargingPercentText"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Android system has a built-in app that provides a lot more information on your battery. Click the button below to see battery usage on a per app basis, as well as some other additional battery usage information."
                android:id="@+id/explanationOfButton"
                android:textColor="#ff000000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Open Settings Page"
                android:id="@+id/opensettings_button"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
